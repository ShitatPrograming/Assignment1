#include <stdio.h>
char ceaser(char);
int main(void)
{
   char code[5]="JELLO";//pre-encoded message
   int i ;//index
   int key=1; //need size of
   /*prinf("ENTER MESSAGE:") for later use*/
  /*scanf("") for later use*/
   /*prinf("ENTER KEY:") for later use*/
   /*scanf("%d", &key) for later use*/
  for(i=0;i<5;i++)
  {
      if(code[i]>65 && code[i]<90)//if it is a captial letter
      {
      
      code[i]=(code[i]-65+key)%26+65;
      }
  }
  printf("Encrypted message: %s", code);
   
  
  return 0;

}
